{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug prepf mock",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/prepf",
      "args": [
        "mock"
      ],
      "env": {
        "GEMINI_API_KEY": "${env:GEMINI_API_KEY}"
      },
      "console": "integratedTerminal",
      "showLog": true,
      "trace": "log",
      "logOutput": "rpc"
    },
    {
      "name": "Debug prepf mock with resume",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/prepf",
      "args": [
        "mock",
        "-r",
        "${workspaceFolder}/test_resume.md"
      ],
      "env": {
        "GEMINI_API_KEY": "${env:GEMINI_API_KEY}"
      },
      "console": "integratedTerminal",
      "showLog": true,
      "trace": "log",
      "logOutput": "rpc"
    },
    {
      "name": "Debug prepf mock (verbose)",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/prepf",
      "args": [
        "mock",
        "-v"
      ],
      "env": {
        "GEMINI_API_KEY": "${env:GEMINI_API_KEY}"
      },
      "console": "integratedTerminal",
      "showLog": true,
      "trace": "verbose",
      "logOutput": "rpc"
    }
  ]
}

